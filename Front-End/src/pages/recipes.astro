---
import Layout from "src/layouts/layout.astro";
import json from "public/resapys.json";

const count = [1, 2, 3, 4];
---

<Layout title="The Recipes" language="en">
  <div id="Block-1">
    <div class="h-screen w-screen overflow-hidden">
      <div
        id="DarkSideBar"
        class="absolute w-full h-full right-0 z-10 from-true-black/90 bg-gradient-to-r opacity-95"
      >
      </div>
      <img
        id="TheBackGorundImage"
        class="h-auto w-screen Background object-cover origin-center"
        src={"/img/background/de5a4cb8642183b4a81e590368c8ebe0.jpeg"}
        alt="Tea"
      />

      <div
        id="Text"
        class="absolute flex flex-col gap-4 content-center items-center w-[44rem] TeaCupText top-[25%] left-[10%] z-20"
      >
        <p class="Headline-2 mr-48">
          Our Tea<br /> &nbsp;&nbsp;&nbsp;&nbsp;Recipes
        </p>
        <p class="Text text-center pb-4 w-[32rem] ml-32">
          Explore our curated collection of teas, each offering a unique flavor
          and experience. Take a moment to steep in the variety
        </p>
      </div>
    </div>
  </div>
  <div id="Block-2" class="flex flex-row mt-16">
    <div class="w-2/12 flex flex-col gap-10 items-center mt-8">
      {
        Object.keys(json).map((category) => (
          <button class="focus:text-light focus:underline bg-transparent px-3 py-2 rounded flex  text-light/50 TeaSelection ">
            <p
              id="Block2DataTabs-p"
              class="Subheadline text-inherit leading-none"
            >
              {category}
            </p>
            <div class="h-full ml-2 w-10 bg-black invisible" />
          </button>
        ))
      }
    </div>

    <div class="w-10/12 flex flex-col mx-24">
      {
        count.map((coun, index) => (
          <div class="w-full h-72 bg-black flex mt-8">
            <img
              src="/img/recipes/bf183e5f6399b21ef8213e18bff71afd.png"
              alt=""
              srcset=""
              class="w-1/2 object-cover"
            />
            <div class="w-1/2 flex items-center">
              <div class="flex flex-col mx-6">
                <p class="Text text-light">Recipe</p>
                <p class="Text text-light">
                  Lorem ipsum dolor sit amet consectetur adipiscing elit.
                </p>
                <a
                  class="flex flex-row"
                  href="/recipes/Green-Teas/Green Tea with milk"
                >
                  <p class="text-light">select</p>
                  <img
                    src="/svg/Arrow rigth.svg"
                    alt="Arow"
                    class="ml-2 h-2.5 fill-none self-center"
                  />
                </a>
              </div>
            </div>
          </div>
        ))
      }
    </div>

    <style>
      .Background {
        transform: translateY(-25%);
      }
    </style>
  </div>
</Layout>
