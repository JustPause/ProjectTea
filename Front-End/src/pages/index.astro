          <div
            class="absolute bg-gradient-to-r from-dark-green to-transparent h-full w-72 left-0 z-10 pointer-events-none"
            id="leftShader"
          >
          </div>

          <div
            id="scroll"
            class="h-full flex flex-row items-center gap-16 overflow-x-hidden scrollbar-hide"
          >
            <div
              class="h-52 w-52 bg-white border-[5px] border-color rounded-full shrink-0 overflow-hidden"
            >
              <img
                src="/public/img/teas/Black.webp"
                class="w-full h-full object-cover object-center teaImige"
                alt=""
              />
            </div>
            <div
              class="h-52 w-52 bg-white border-[5px] border-color rounded-full shrink-0 overflow-hidden"
            >
              <img
                src="/public/img/teas/Black.webp"
                class="w-full h-full object-cover object-center teaImige"
                alt=""
              />
            </div>
            <div
