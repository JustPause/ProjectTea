    </div>

    <style>
      .teaImige {
        transform: scale(1.3);
      }
    </style>

    <script>
      const scroll = document.getElementById("scroll");
      const leftArrow = document.getElementById("leftArrow");
      const rightArrow = document.getElementById("rightArrow");

      let scrollInterval;

      // Function to scroll left
      function scrollLeft() {
        scroll.scrollBy({ left: -50, behavior: "smooth" });
      }

      // Function to scroll right
      function scrollRight() {
        scroll.scrollBy({ left: 50, behavior: "smooth" });
      }

      // Start scrolling when mouse enters the arrow
      leftArrow.addEventListener("mouseenter", () => {
        scrollInterval = setInterval(scrollLeft, 10);
      });

      rightArrow.addEventListener("mouseenter", () => {
        scrollInterval = setInterval(scrollRight, 10);
      });

      // Stop scrolling when mouse leaves the arrow
      leftArrow.addEventListener("mouseleave", () => {
        clearInterval(scrollInterval);
      });

      rightArrow.addEventListener("mouseleave", () => {
        clearInterval(scrollInterval);
      });
    </script>
    <!-- ----------------------------------------------------------------------------------------- -->

    <div id="Block-3" class="flex flex-col h-screen">
      <div class="relative h-screen w-screen overflow-hidden">
        <img
