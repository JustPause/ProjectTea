    </div>

    <style>
      .teaImige {
        transform: scale(1.3);
      }
    </style>

    <script>
      const scroll = document.getElementById("scroll");
      const leftArrow = document.getElementById("leftArrow");
      const rightArrow = document.getElementById("rightArrow");

      let scrollInterval;

      // Function to scroll left
      function scrollLeft() {
        scroll.scrollBy({ left: -50, behavior: "smooth" });
      }

      // Function to scroll right
      function scrollRight() {
        scroll.scrollBy({ left: 50, behavior: "smooth" });
      }

      // Start scrolling when mouse enters the arrow
      leftArrow.addEventListener("mouseenter", () => {
        scrollInterval = setInterval(scrollLeft, 10);
      });

      rightArrow.addEventListener("mouseenter", () => {
        scrollInterval = setInterval(scrollRight, 10);
      });

      // Stop scrolling when mouse leaves the arrow
      leftArrow.addEventListener("mouseleave", () => {
        clearInterval(scrollInterval);
      });

      rightArrow.addEventListener("mouseleave", () => {
        clearInterval(scrollInterval);
      });
    </script>
    <!-- ----------------------------------------------------------------------------------------- -->

    <div id="Block-3" class="flex flex-col h-screen">
      <div class="relative h-screen w-screen overflow-hidden">
        <img
          id="TheBackGorundImage"
          class="h-auto w-screen SecondBackground object-cover origin-center"
          src="/img/background/97ec70c76e9ab89fdc6970cb434a29e2.jpeg"
          alt="Tea"
        />

        <div
          id="Text"
          class="absolute flex flex-col gap-4 content-center items-center w-[44rem] TeaCupText top-[20%] left-[10%] z-20 bg-true-black/50 p-10 rounded-2xl backdrop-blur-xl drop-shadow-md"
        >
          <p class="Headline-2 text-center">Discover varijas flavors of tea</p>
          <p class="Text text-center pb-4">
            Explore different types of tea, their production processes and
            health advantages, while keeping track of your personal tea journey.
          </p>
          <div class="flex w-full">
            <button
              class="border-white border-2 font-medium rounded-lg px-12 py-4"
            >
              <p class="Text text-white leading-none">Learn more</p>
            </button>
          </div>
        </div>
      </div>
    </div>

    <style>
      .SecondBackground {
        transform: scale(0.675) rotate(90deg) translate(-85%);
      }
      @keyframes scroll {
        0% {
          transform: translateX(0%);
        }
        100% {
          transform: translateX(-130rem);
        }
      }
      .scroll-auto {
        animation: scroll 10s linear infinite;
      }
      .scroll-auto:hover {
        animation-play-state: paused;
      }
    </style>

    <div id="Block-4" class="flex flex-col h-screen">
      <div class="flex flex-col gap-10 w-11/12 border-2">
        <p class="Headline-2 leading-none">Recepis</p>

        <div class="h-[38rem] flex flex-row gap-16">
          <div class="h-full w-3/6 bg-white"></div>
          <div class="h-full w-1/6 bg-white"></div>
          <div class="h-full w-1/6 bg-white"></div>
          <div class="h-full w-1/6 bg-white"></div>
        </div>

        <div>
          <NiceButton text="Search" />
        </div>
      </div>
    </div>
  </main>
</Layout>
