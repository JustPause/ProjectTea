<Layout title="Tea today is delicious">
  <main>
    <div id="Block-1">
      <div class="h-screen w-screen overflow-hidden">
        <div
          id="DarkSideBar"
          class="absolute w-full h-full right-0 z-10 from-true-black/90 bg-gradient-to-l opacity-95"
