---
interface Page {
  frontmatter: {
    title: string;
    bg_img: string;
    url: string;
    hover_text: string;
  };
}

const setBackgroundImage = (img) => {
  return {
    backgroundImage: `url('/public/img/recipes/${img}.jpg')`,
    backgroundPosition: `center`,
    backgroundSize: `cover`,
  };
};

const pages = Object.values(
  await import.meta.glob<Page>("../pages/recipe/*.md", { eager: true })
).slice(0, 6);
---

<div class="flex flex-row flex-wrap justify-center">
  {
    pages.map((page) => (
      <div
        class="card bg-mainColor-dark rounded-2xl m-4 object-cover"
        style={setBackgroundImage(page.frontmatter.bg_img)}
      >
        <p class="text-textColor-dark px-3 bg-black rounded-2xl bg-opacity-75">{page.frontmatter.title}</p>
      </div>
    ))
  }
</div>

<style>
  .card {
    width: 11vw;
    height: 11vw;
  }
</style>
