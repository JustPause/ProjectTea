<form class="max-w-3xl mx-auto mt-4 hidden sm:block">
  <label
    for="default-search"
    class="mb-2 text-sm font-medium text-gray-900 sr-only dark:text-white"
    >Search</label
  >
  <div class="relative">
    <div
      class="absolute inset-y-0 start-0 flex items-center ps-3 pointer-events-none"
    >
      <svg
        class="w-4 h-4 text-mainColor-light dark:text-mainColor-light"
        aria-hidden="true"
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 20 20"
      >
        <path
          stroke="currentColor"
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="m19 19-4-4m0-7A7 7 0 1 1 1 8a7 7 0 0 1 14 0Z"></path>
      </svg>
    </div>
    <input
      type="search"
      id="default-search"
      class="block w-full p-4 ps-10 text-sm text-gray-900 border border-gray-300 rounded-lg bg-gray-50 focus:ring-mainColor-light focus:border-mainColor-light dark:bg-mainColor-dark dark:border-gray-600 dark:placeholder-mainColor-light dark:text-white dark:focus:ring-mainColor-light dark:focus:border-mainColor-light outline-none"
      placeholder="Search Mockups, Logos..."
      required
    />

    <button
      type="submit"
      class="text-mainColor-dark absolute end-2.5 bottom-2.5 bg-mainColor-light hover:bg-mainColor-light focus:ring-4 focus:outline-none focus:ring-mainColor-light font-medium rounded-lg text-sm px-4 py-2 dark:bg-mainColor-light dark:hover:bg-mainColor-light dark:focus:ring-mainColor-dark"
      >Search</button
    >
  </div>
</form>
