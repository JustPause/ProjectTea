---
import Logo from "@global/logo.astro";

const Tabs = [
  { name: "Tea", link: "/teaList" },
  { name: "Benefits", link: "/benefits" },
  { name: "Recipes", link: "/recipes" },
  { name: "Profile", link: "/profile" }
];
---

<nav class="fixed w-full px-6 z-50 mt-4">
  <div
    class="w-full h-8 flex flex-row items-center justify-between mb-2 flex"
    id="headerData"
  >

    <div
      class="left-0 h-16 flex items-center content-center overflow-hidden mb-2"
    >
      <Logo />
    </div>

    <div class="flex flex-row h-full">
      <div class="hidden flex-row gap-8 items-center h-full sm:flex" id="tabs">
        {
          Tabs.map((data) => (
            <label for={data.link}>
              <a class="text-center" href={data.link}>
                <p class="text-white Text leading-none">{data.name}</p>
              </a>
            </label>
          ))
        }

        <div
          id="modes"
          class="border w-12 h-[16pt] rounded-full flex items-center justify-center"
          role="button"
        >
          <img src="/svg/Sun.svg" alt="Logo" class="w-4 block dark:hidden" />
          <img src="/svg/Moon.svg" alt="Logo" class="w-4 hidden dark:block" />
        </div>
      </div>
    </div>
  </div>

  <hr class="border-b-px w-full border-white" />

  <div
    class="fixed w-full h-48 top-0 left-0 from-[#000A] bg-gradient-to-b -z-10"
    id="darkening"
  >
  </div>
</nav>

<script>
  function toggleDarkMode() {
    document.documentElement.classList.toggle("dark");
    const isDark = document.documentElement.classList.contains("dark");
    localStorage.setItem("theme", isDark ? "dark" : "light");
    console.log(localStorage.getItem("theme"));
  }

  if (typeof window !== "undefined") {
    const savedTheme = localStorage.getItem("theme");
    if (savedTheme) {
      document.documentElement.classList.toggle("dark", savedTheme === "dark");
    }
  }

  // const modeButton = document.getElementById("modes") as HTMLInputElement;

  // modeButton.addEventListener("click", toggleDarkMode);
</script>
