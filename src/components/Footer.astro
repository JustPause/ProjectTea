---
import Logo from "./Logo.astro";

const CustomerHelpList = ["FAQs", "Contact Us"];
const AboutUsList = ["The Team", "Nina's Profile", "Justimas Profile"];
---

<div class="bg-mainColor-dark w-full p-12 text-mainColor-light flex flex-col">
  <div class="flex flex-row justify-between">
    <div>
      <Logo />
      <p class="mt-8 w-80">
        Random text about our vision of this project Random text about our
        vision of this project Random text about our vision of this project
      </p>
    </div>
    <div class="flex flex-row">
      <div class="mr-8">
        <p class="text-2xl mb-4">Customer Help</p>
        <ul>
          {CustomerHelpList.map((data) => <li class="mb-4">{data}</li>)}
        </ul>
      </div>
      <div>
        <p class="text-2xl mb-4">About Us</p>
        <ul>
          {AboutUsList.map((data) => <li class="mb-4">{data}</li>)}
        </ul>
      </div>
    </div>
  </div>
  <div class="border-t-2 mt-32 flex flex-row justify-center">
    <p class="mt-4">©2024 Justinas Stankūnas. All rights reserved</p>
  </div>
</div>
